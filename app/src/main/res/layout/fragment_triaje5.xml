<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.triaje.TriajeFragment5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/register">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="20dp"
                android:contentDescription="@string/logo_infocovid"
                android:src="@drawable/covid" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:fontFamily="@font/text_me_one"
                android:text="@string/triaje"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/purple_200"
                android:textSize="55dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/s_ntomas"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="@string/marca_tus_s_ntomas_si_no_tienes_ninguno_marca_la_opcion_no_tengo_ning_n_s_ntoma"
            android:textAlignment="center"
            android:textSize="13dp" />

        <CheckBox
            android:id="@+id/cbt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:text="Tos"
            android:textColor="@color/title"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cbt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Dolor de garganta"
            android:textColor="@color/title"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cbt_3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Malestar eneral"
            android:textColor="@color/title"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cbt_4"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Dificultad para respirar"
            android:textColor="@color/title"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cbt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Cefálea"
            android:textColor="@color/title"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cbt_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Congestión nasal"
            android:textColor="@color/title"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cbt_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Fiebre"
            android:textColor="@color/title"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cbt_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:text="Otros"
            android:textColor="@color/title"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btnFinalizarTriaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtPassword"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape3"
            android:enabled="true"
            android:text="@string/continuar"
            android:textColor="@color/purple_200" />

    </LinearLayout>


</ScrollView>


