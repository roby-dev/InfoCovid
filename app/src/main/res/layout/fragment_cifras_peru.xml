<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subvistas.cifras.CifrasPeruFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:background="@drawable/register">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="260dp"
                android:contentDescription="@string/logo_infocovid"
                android:src="@drawable/covid"  />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="53dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@font/text_me_one"
                android:text="@string/cifras"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/purple_200"
                android:textSize="55dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textColor="@color/purple_200"
                android:text="Peru"/>

        </RelativeLayout>


        <AutoCompleteTextView
            android:id="@+id/atCiudades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_city"
            android:completionHint="Seleccione ciudad"
            android:completionThreshold="1"
            android:layout_margin="15dp"
            />

        <LinearLayout
            android:layout_margin="10dp"
            android:textAlignment="center"
            android:layout_width="200dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:background="@drawable/shape2"
            android:gravity="center">

            <TextView
                android:id="@+id/txtCCiudad"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:text="@string/ciudad"/>

        </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center"
         android:layout_marginTop="30dp"
         >

         <LinearLayout

             android:layout_margin="10dp"
             android:textAlignment="center"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:orientation="vertical"
             android:background="@drawable/shape_primary"
             android:gravity="center">

             <ImageView
                 android:layout_width="20dp"
                 android:layout_height="50dp"
                 android:src="@drawable/logopersona"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/confirmados"
                 android:textAlignment="center"
                 android:textColor="@color/white"/>

             <TextView
                 android:id="@+id/txtCTotal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:text="0"/>

         </LinearLayout>
         <LinearLayout

             android:layout_margin="10dp"
             android:textAlignment="center"
             android:layout_width="100dp"
             android:layout_height="100dp"
                android:orientation="vertical"
             android:background="@drawable/shape_danger"
             android:gravity="center">

             <ImageView
                 android:layout_width="40dp"
                 android:layout_height="50dp"
                 android:scaleType="centerCrop"
                 android:src="@drawable/tumb"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/fallecidos"
                 android:textAlignment="center"
                 android:textColor="@color/white"/>
             <TextView
                 android:id="@+id/txtCFallecidos"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:text="0"/>

         </LinearLayout>

         <LinearLayout

             android:layout_margin="10dp"
             android:textAlignment="center"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:orientation="vertical"
             android:background="@drawable/shape_success"
             android:gravity="center">

             <ImageView
                 android:layout_width="40dp"
                 android:layout_height="50dp"
                 android:scaleType="centerCrop"
                 android:src="@drawable/letalidad"/>

             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="@string/letalidad"
                 android:textAlignment="center"
                 android:textColor="@color/white"/>

             <TextView
                 android:id="@+id/txtCLetalidad"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/white"
                 android:text="0"/>

         </LinearLayout>


     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <LinearLayout

                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/shape_primary"
                android:gravity="center">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"

                    android:src="@drawable/pcr"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pcr"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txtCPCR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="0"/>

            </LinearLayout>

            <LinearLayout

                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:background="@drawable/shape_success"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="50dp"

                    android:src="@drawable/pr"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pr"
                    android:textAlignment="center"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/txtCPR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="0"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/regresar"
            android:padding="20dp"
            android:layout_margin="40dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>